<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/messagesRl"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="#6D8DB3">

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:background="#86e4e4e4"
            android:gravity="center_horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="3dp"
            android:paddingRight="10dp"
            android:paddingBottom="3dp"
            android:text="Restbetrag am Monatsende:"
            android:textColor="#b6252525"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/moneyTillMonthEndTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView18"
            android:layout_centerHorizontal="true"
            android:background="#86e4e4e4"
            android:gravity="center_horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="0dp"
            android:paddingRight="10dp"
            android:paddingBottom="3dp"
            android:text="Berechnung in KÃ¼rze"
            android:textColor="#b6141414"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/loginUsernameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:height="40dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:text="Benutzername"
            android:textColor="#d8ffffff"
            android:textSize="16sp"
            android:textStyle="bold" />

    </RelativeLayout>
</RelativeLayout>