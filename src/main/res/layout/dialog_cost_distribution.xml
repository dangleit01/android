<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/customdialog"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Kostenverteilung"
        android:id="@+id/costDistributionTitleTv"
        android:textSize="22sp"
        android:textStyle="bold"
        android:background="#427ec2"
        android:textColor="#ffffff"
        android:padding="5dip" />

    <se.emilsjolander.stickylistheaders.StickyListHeadersListView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/costDistributionsLv"
        android:layout_gravity="top"
        android:layout_below="@+id/costDistributionTitleTv" />

    <Button
        android:id="@+id/editCostDistributionDetailsButton"
        style="@style/AppTheme"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/costDistributionsLv"
        android:layout_gravity="bottom"
        android:text="Details bearbeiten"
        android:textSize="16sp" />


</RelativeLayout>