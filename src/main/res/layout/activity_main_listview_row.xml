<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/invoiceListRow"
    android:layout_width="fill_parent"
    android:layout_height="60dp"
    android:background="@drawable/activity_main_list_multiple_selection"
    android:minHeight="60dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/invoiceListIvArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/app_name"
        android:src="@drawable/arrow" />

    <RelativeLayout
        android:id="@+id/relativeLayout6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dip"
        android:layout_toRightOf="@+id/relativeLayout7">

        <TextView
            android:id="@+id/invoiceListTvBusinessPartner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="3dip"
            android:text="Aldi"
            android:textColor="#040404"
            android:textSize="16dip"
            android:textStyle="bold"
            android:typeface="sans" />

        <TextView
            android:id="@+id/invoiceListTvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/invoiceListTvBusinessPartner"
            android:layout_below="@+id/invoiceListTvBusinessPartner"
            android:text="25. September 2015"
            android:textColor="#343434"
            android:textSize="12dip" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout7"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="top"
        android:layout_marginLeft="5dp">

        <ImageView
            android:id="@+id/invoiceListIvStatus"
            android:layout_width="32dip"
            android:layout_height="32dip"
            android:layout_centerHorizontal="true"
            android:layout_gravity="top"
            android:contentDescription="@string/app_name"
            android:src="@drawable/keyboard" />

        <TextView
            android:id="@+id/externalNameTv"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/invoiceListIvStatus"
            android:gravity="center_horizontal"
            android:text="Mareike"
            android:textSize="8dp"
            android:visibility="visible" />
    </RelativeLayout>

    <TextView
        android:id="@+id/invoiceListTvSum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dip"
        android:layout_toLeftOf="@+id/invoiceListIvArrow"
        android:text="12 â‚¬"
        android:textSize="22dip" />


</RelativeLayout>